{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": false,
    "target": "esnext",
    "outDir": "build",
    "moduleResolution": "node",
    "module": "commonjs",
    "importHelpers": true,
    "listFiles": false,
    "traceResolution": false,
    "pretty": true,
    "lib": ["es5", "es2015", "es2017"],
    "types": ["node"],
    "allowJs": true,
    "sourceMap": true
  },
  "include": [
    "tests/**/*.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": false
}